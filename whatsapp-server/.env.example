# WhatsApp Server Configuration Example
# Copy this file to .env and configure according to your environment

# Server Settings
HOST=localhost
PORT=8000

# Database Settings
# Use 'memory' for in-memory storage (faster, data lost on restart)
# Use 'database' for MySQL/PostgreSQL (persistent storage)
STORE_TYPE=memory

# Database connection (required if STORE_TYPE=database)
# Format: mysql://username:password@host:port/database
# Or: postgresql://username:password@host:port/database
DATABASE_URL="mysql://root:@localhost:3306/whatsml"

# Reconnection Settings
# Maximum number of reconnection attempts (-1 for unlimited)
MAX_RETRIES=5
# Delay between reconnection attempts in milliseconds
RECONNECT_INTERVAL=5000

# Webhook Settings
# Base URL for webhook callbacks
BASE_URL=http://localhost

# Allowed webhook events (comma-separated)
# Use 'ALL' to allow all events, or specify individual events:
# CONNECTION_UPDATE,MESSAGES_UPSERT,MESSAGES_UPDATE,MESSAGES_DELETE,MESSAGES_REACTION,
# MESSAGES_RECEIPT_UPDATE,MESSAGES_MEDIA_UPDATE,CHATS_UPSERT,CHATS_UPDATE,CHATS_DELETE,
# CHATS_SET,CONTACTS_UPSERT,CONTACTS_UPDATE,CONTACTS_SET,PRESENCE_UPDATE,GROUPS_UPSERT,
# GROUPS_UPDATE,GROUP_PARTICIPANTS_UPDATE,MESSAGING_HISTORY_SET,LABELS_EDIT,
# LABELS_ASSOCIATION,BLOCKLIST_SET,BLOCKLIST_UPDATE
APP_WEBHOOK_ALLOWED_EVENTS=ALL

# File Settings
# Send media files as base64 encoded strings in webhook
APP_WEBHOOK_FILE_IN_BASE64=false

# Authentication
# Site key for authentication (change this in production)
SITE_KEY=your-site-key-here
